{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist/game",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "strict": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "node_modules/phaser-ce/typescript/phaser.d.ts",
        "src/index.ts",
        "src/constants.ts"
    ],
    "include": [
        "src/objects/*.ts",
        "src/states/*.ts"
    ]
}
